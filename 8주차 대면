#continue 사용
fruits = ["사과","바나나","딸기"]
for f in fruits:
    if f == "바나나":
        continue
    print(f)
#pass 사용
fruits = ["사과","바나나","딸기"]
for f in fruits:
    pass
#for~else 구조
